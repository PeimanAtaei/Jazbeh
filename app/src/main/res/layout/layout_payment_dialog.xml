<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textDirection="rtl"
    android:layoutDirection="ltr">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/update_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="خرید محصول"
                android:padding="@dimen/margin_small"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/text_size_larg"
                android:background="@color/colorAccent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="در صورتی که کد معرف دارید آن را وارد کرده و 10 درصد تخفیف دریافت نمایید"
                android:layout_marginRight="@dimen/margin_larg"
                android:layout_marginLeft="@dimen/margin_larg"
                android:layout_marginTop="@dimen/margin_normal"
                android:gravity="center"
                android:textColor="@color/text_color2"
                />

            <EditText
                android:id="@+id/music_invitation_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_input"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:hint="کد معرف (اختیاری)"
                android:gravity="center"
                android:textColor="@color/hint_color"
                android:textColorHint="@color/hint_color"
                android:textSize="15sp"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:layout_below="@id/personal_city_edit_text"
                android:layout_marginTop="@dimen/margin_small"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="@dimen/margin_normal"
                >
                <Button
                    android:id="@+id/music_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/selector_botton"
                    android:textColor="@android:color/white"
                    android:text="بیخیال"/>
                <Button
                    android:id="@+id/music_pay_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:background="@drawable/selector_botton"
                    android:textColor="@android:color/white"
                    android:text="دریافت محصول"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>