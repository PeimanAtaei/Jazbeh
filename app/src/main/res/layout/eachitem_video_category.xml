<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/eachItem_video_category_box"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:textDirection="rtl">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/eachItem_video_category_image"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:src="@drawable/binauralimage"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/margin_normal">

                <TextView
                    android:id="@+id/eachItem_video_category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_big"
                    android:text="video title"
                    android:layout_marginTop="@dimen/margin_normal"
                    />

                <TextView
                    android:id="@+id/eachItem_video_category_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/text_size_normal"
                    android:text="video title"
                    android:maxLines="2"
                    android:layout_marginTop="@dimen/margin_small"
                    android:ellipsize="end"
                    />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>