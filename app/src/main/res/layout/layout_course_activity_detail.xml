<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:elevation="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/course_card_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/header5"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/course_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/course_card_header"
                    android:text="سلامت جسمانی"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_big"
                    android:textColor="@color/text_color"/>
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="توضیحات :"
                android:textColor="@color/text_color2"
                android:drawableRight="@drawable/ic_done"
                android:drawablePadding="@dimen/margin_small"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/course_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="توضیحات در باره دوره مورد نظر"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginRight="@dimen/margin_larg"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="قیمت دوره :"
                android:drawableRight="@drawable/ic_done"
                android:drawablePadding="@dimen/margin_small"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color2"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"

                />

            <TextView
                android:id="@+id/course_card_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50 هزار تومان"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color2"
                android:layout_marginRight="@dimen/margin_larg"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="right"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نوع دوره :"
                android:drawableRight="@drawable/ic_done"
                android:drawablePadding="@dimen/margin_small"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color2"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_small"

                />

            <TextView
                android:id="@+id/course_card_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="محصولات بینورال و فایل های تمرین"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color2"
                android:layout_marginRight="@dimen/margin_larg"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="right"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_normal"
                android:paddingRight="@dimen/margin_normal"
                android:paddingBottom="@dimen/margin_normal"
                >

                <LinearLayout
                    android:id="@+id/music_activity_reaction_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal"
                    android:layout_below="@id/music_play_btn"
                    >
                    <LinearLayout
                        android:id="@+id/course_card_favorite_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/course_card_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:padding="4dp"
                            android:textSize="@dimen/text_size_small"
                            android:text="علاقمندی"
                            android:textColor="@color/hint_color"/>
                        <ImageView
                            android:id="@+id/course_card_favorite_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_unarchive"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/course_card_comment_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/course_card_comment_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:padding="4dp"
                            android:textSize="@dimen/text_size_small"
                            android:text="0 نظر"
                            android:textDirection="rtl"
                            android:textColor="@color/hint_color"/>
                        <ImageView
                            android:id="@+id/course_card_comments_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_comment"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/course_card_like_box"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/course_card_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:padding="4dp"
                            android:textSize="@dimen/text_size_small"
                            android:text="124"
                            android:textColor="@color/hint_color"/>
                        <ImageView
                            android:id="@+id/course_card_like_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_favorite_border"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/course_card_view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:padding="4dp"
                            android:textSize="@dimen/text_size_small"
                            android:text="124"
                            android:textColor="@color/hint_color"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_view"/>

                    </LinearLayout>





                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/course_card_herder_payBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/selector_botton"
                android:text="@string/activity_course_buy_btn"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/margin_small"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>